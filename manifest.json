{
    "name": "BetterBack",
    "manifest_version": 2,
    "version": "1.1",
    "description": "An enhanced back button.",
    "icons": {
        "16": "icon_16.png",
        "32": "icon_32.png",
        "48": "icon_48.png",
        "128": "icon_128.png"
    },
    "background": {
        "persistent": false,
        "scripts": ["background_script.js"]
    },
    "permissions": ["storage", "activeTab", "tabs"],
    "browser_action": {
        "default_popup": "popup.html"
    }
}
